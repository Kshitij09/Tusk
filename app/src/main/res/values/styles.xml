<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="materialButtonStyle">@style/Widget.Tusk.Button</item>
    </style>

    <style name="Ratings">
        <item name="android:drawableRight">@drawable/ic_star_small</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:background">@color/cardStar</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Widget.Tusk.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Tusk.ReceiptCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">32dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardBackgroundColor">@color/md_grey_200</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

</resources>
